# =============================================================================
# AuraScribe - Root Environment Configuration Template
# =============================================================================
# This file is used by docker-compose to set environment variables.
# Copy to .env and fill in your actual values.
# NEVER commit .env files with real credentials to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Frontend Configuration (passed as build args to Vite)
# -----------------------------------------------------------------------------
# IMPORTANT: Use your PUBLIC API URL, not internal Docker hostname
VITE_API_BASE_URL=https://api.aurascribe.ca
VITE_API_KEY=changeme-generate-strong-api-key

# -----------------------------------------------------------------------------
# Backend Configuration
# -----------------------------------------------------------------------------
PORT=5000
ENVIRONMENT=production

# API Key - MUST match VITE_API_KEY for frontend-backend auth
AURASCRIBE_API_KEY=changeme-must-match-vite-api-key

# WebSocket configuration
# Set to `true` if you want to enforce Google-issued `id_token`s for socket clients.
REQUIRE_WS_ID_TOKEN=false

# Flask secret key
SECRET_KEY=changeme-generate-strong-secret

# -----------------------------------------------------------------------------
# CORS Allowed Origins
# -----------------------------------------------------------------------------
ALLOWED_ORIGINS=https://app.aurascribe.ca,https://aurascribe.ca,https://www.aurascribe.ca

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://:your-redis-password@redis:6379/0
REDIS_PASSWORD=changeme-redis-password

# -----------------------------------------------------------------------------
# External Services
# -----------------------------------------------------------------------------
DEEPGRAM_API_KEY=your-deepgram-api-key
DEEPGRAM_SELF_HOSTED_URL=http://your-deepgram-host:8080

# Google Cloud
GEMINI_API_KEY=your-gemini-api-key
GCP_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=northamerica-northeast1
